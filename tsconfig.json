{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@common": ["src/common"],
      "@apis/*": ["src/apis/*"],
      "packageJson": ["package.json"],
      "@filters/*": ["src/common/filters/*"],
      "@models/*": ["src/common/models/*"],
      "@exceptions/*": ["src/common/exceptions/*"],
      "@interfaces/*": ["src/common/interfaces/*"],
      "@common-dtos/*": ["src/common/dtos/*"],
      "@user-module/*": ["src/modules/user/*"],
      "@product-module/*": ["src/modules/product/*"],
      "@auth-module/*": ["src/modules/auth/*"],
      "@cart-module/*": ["src/modules/cart/*"],
      "@product-cart-module/*": ["src/modules/product-cart/*"],
      "@file-storage-module/*": ["src/modules/file-storage/*"],
      "@cache-module/*": ["src/modules/cache/*"],
      "@guards/*": ["src/common/guards/*"],
      "@constants/*": ["src/common/constants/*"],
      "@decorators/*": ["src/common/decorators/*"],
    }
  }
}
